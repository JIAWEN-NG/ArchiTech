{
  "name": "lynx",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "rspeedy build",
    "check": "biome check --write",
    "dev": "rspeedy dev",
    "format": "prettier --write .",
    "lint": "eslint .",
    "preview": "rspeedy preview",
    "test": "vitest run",
    "backend:dev": "cd backend && nodemon src/server.ts",
    "backend:build": "cd backend && tsc src/server.ts --outDir dist --target es2020 --module commonjs",
    "backend:start": "cd backend && node dist/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run backend:dev\"",
    "backend:test": "curl http://localhost:3001/health"
  },
  "dependencies": {
    "@lynx-js/react": "^0.112.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "openai": "^5.16.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@eslint/js": "^9.32.0",
    "@lynx-js/preact-devtools": "^5.0.1-6664329",
    "@lynx-js/qrcode-rsbuild-plugin": "^0.4.1",
    "@lynx-js/react-rsbuild-plugin": "^0.10.13",
    "@lynx-js/rspeedy": "^0.10.8",
    "@lynx-js/types": "3.3.0",
    "@rsbuild/plugin-type-check": "1.2.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.23",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "private": true,
  "description": "This is a ReactLynx project bootstrapped with `create-rspeedy`.",
  "main": "index.js",
  "keywords": [],
